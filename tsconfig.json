{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": ["node_modules/@types"]
}
